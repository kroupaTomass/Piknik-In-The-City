@import 'normalize'
@import 'helper'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
button
input
select
textarea
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

hr
  color: white
  width: 80%

body
  color: $black
  font-size: 1em
  line-height: 1.5
  box-sizing: border-box

header
  background: $grey
  color:$black
  padding: 1em
  position: fixed
  top: 0px

  nav
    float:right
    user-select:none

  .nav-item
    float:left
    margin-left:.5em

    a.active
      text-decoration:underline

footer
  background-color: gray
  color: white
  text-align: center
  padding: 10px
  margin-top: 20px
  font-weight: bold

.content
  padding: 0
  height: 100%
  width: 100%

.div-home-panel
  display: table
  position: relative
  width: 100%
  height: 100%
  -webkit-background-size: cover
  -moz-background-size: cover
  background-size: cover
  -o-background-size: cover
  text-align: center
  z-index: 1

.div-facebook-panel
  margin: 0 auto
  max-width: 600px
  height: 100%

.p-hash-tag-text
  font-family: Verdana
  text-align: center
  font-size: 40px
  font-weight: bold

.img-responsive
  width: 100%
  max-width: 600px
  height: auto

@media screen and (max-width: 480px)
  .div-home-panel
    margin: 0 auto
    background-color: red
  .img-responsive
    width: 100%;
    max-width: 50px
    height: auto;


.div-float-panel
  float: right
  position: fixed
  top: 20px
  right: 20px
  z-index: 2
  
.img_float
  max-width: 50px

.clearfix
  background-color: transparent

.fb-page, .fb-page:before, .fb-page:after
  border: 1px solid #ccc

.fb-page:before, .fb-page:after
  content: ""
  position: absolute
  bottom: -3px
  left: 2px
  right: 2px
  height: 1px
  border-top: none

.fb-page:after
  left: 4px
  right: 4px
  bottom: -5px
  box-shadow: 0 0 2px #ccc
