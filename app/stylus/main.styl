@import 'normalize'
@import 'helper'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
button
input
select
textarea
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

hr
  color: white
  width: 80%

body
html
  color: $black
  font-size: 1em
  line-height: 1.5
  box-sizing: border-box
  height: 100%
  width: 100%
  min-height: 100%

header
  background: $grey
  color:$black
  padding: 1em
  position: fixed
  top: 0px

  nav
    float:right
    user-select:none

  .nav-item
    float:left
    margin-left:.5em

    a.active
      text-decoration:underline

footer
  background-color: gray
  color: #4d4d4d
  text-align: center
  padding: 10px
  margin-top: 20px
  font-weight: bold
  font-size: 12px

.footer-row
  display: table
  width: 100%
  table-layout: fixed
  border-spacing: 10px

.footer-column
  display: table-cell
  vertical-align: middle

.imgFooterLogo
  max-height: 60px

.imgFooterIcon
  width: 50px

.content
  padding: 0
  min-height: 100%

.div-home-panel
  position: relative
  width: 100%
  height: 100%
  text-align: center
  z-index: 1

.div-facebook-panel
  margin: 0 auto
  max-width: 600px
  height: 100%
  text-align: center

.p-hash-tag-text
  font-family: Verdana
  text-align: center
  font-size: 40px
  font-weight: bold

.img-responsive
  width: 100%
  max-width: 600px
  height: auto

.div-float-panel
  float: right
  position: fixed
  top: 20px
  right: 20px
  z-index: 2

.img_float
  max-width: 50px

.clearfix
  background-color: transparent
  z-index: 9


@media screen and (max-width:375px)
  .div-float-panel
    display: none
  .p-hash-tag-text
    font-size: 20px
  .img_float
    width: 30px
  .p-footer-webmaster
    display: none;


@media screen and (min-width:376px) and (max-width:480px)
  .div-home-panel
    margin: 0 auto
  .img-responsive
    max-width: 100%
    height: auto
  .p-hash-tag-text
    font-size: 30px
  .img_float
    width: 40px;


@media screen and (min-width:481px)
  .img_float
    width: 50px;


.fb-page, .fb-page:before, .fb-page:after
  border: 1px solid #ccc

.fb-page:before, .fb-page:after
  content: ""
  position: absolute
  bottom: -3px
  left: 2px
  right: 2px
  height: 1px
  border-top: none

.fb-page:after
  left: 4px
  right: 4px
  bottom: -5px
  box-shadow: 0 0 2px #ccc
